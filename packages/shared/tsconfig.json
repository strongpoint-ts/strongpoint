{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "outDir": "dist",
    "paths": {
      "@typepoint/fixtures": ["../fixtures/src"]
    },
    "rootDir": "src",
    "strict": true,
    "target": "es5"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
