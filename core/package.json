{
  "name": "@typepoint/core",
  "version": "0.11.0",
  "description": "Library for defining, serving and consuming strongly typed endpoints in TypeScript",
  "main": "index.js",
  "private": true,
  "workspaces": {
    "nohoist": true
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "npm run build:entry && npm run build:server && npm run build:client",
    "build:client": "tsc -p ./src/tsconfig.client.json",
    "build:entry": "tsc -p ./src/tsconfig.entry.json",
    "build:server": "tsc -p ./src/tsconfig.server.json",
    "lint": "tslint -p ./",
    "prepack": "npm run validate",
    "pack": "ts-node ./pack.ts",
    "preship": "npm run pack",
    "ship": "cd ./dist && npm publish --access public",
    "test": "jest --config jest.config.js",
    "validate": "npm run lint && npm run build && npm run test"
  },
  "types": "./index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/typepoint/typepoint.git"
  },
  "keywords": [
    "typepoint",
    "type-point",
    "typedpoint",
    "typed-point",
    "strongpoint",
    "strong-point",
    "strongly",
    "typed",
    "endpoints",
    "express",
    "TypeScript",
    "typesafe",
    "type-safe",
    "type",
    "safe",
    "rest",
    "api"
  ],
  "author": "Ben <codeandcats@gmail.com>",
  "license": "SEE LICENSE IN LICENSE",
  "contributors": [
    "Ben <codeandcats@gmail.com>",
    "Laurence Dougal Myers (https://github.com/laurence-myers)"
  ],
  "bugs": {
    "url": "https://github.com/typepoint/typepoint/issues"
  },
  "homepage": "https://github.com/typepoint/typepoint#readme",
  "nyc": {
    "all": true,
    "exclude": [
      "**/*.test.js"
    ],
    "include": [
      "tests-output/src"
    ],
    "produce-source-map": true,
    "recursive": true,
    "reporter": [
      "html",
      "text"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  },
  "devDependencies": {
    "@types/clone": "0.1.30",
    "@types/deep-freeze": "0.1.1",
    "@types/es6-promise": "3.3.0",
    "@types/express": "4.17.0",
    "@types/fs-extra": "8.0.0",
    "@types/get-port": "4.2.0",
    "@types/jest": "24.0.15",
    "@types/joi": "10.4.2",
    "@types/uuid": "3.4.5",
    "chalk": "2.4.2",
    "concurrently": "4.1.1",
    "express": "4.17.1",
    "fs-extra": "8.1.0",
    "get-port": "5.0.0",
    "inversify": "5.0.1",
    "jest": "24.8.0",
    "koa-router": "7.4.0",
    "rimraf": "2.6.3",
    "source-map-support": "0.5.12",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "typescript": "3.5.2",
    "uuid": "3.3.2"
  },
  "dependencies": {
    "axios": "0.19.0",
    "clone": "2.1.2",
    "http-status-codes": "1.3.2",
    "joi": "10.6.0",
    "reflect-metadata": "0.1.13",
    "tsdv-joi": "0.0.13",
    "typed-tuple": "1.0.1"
  }
}