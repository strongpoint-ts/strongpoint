{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "encoding": true,
    "eofline": true,
    "import-spacing": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "object-literal-sort-keys": false,
    "max-classes-per-file": false,
    "member-access": [
      true,
      "no-public"
    ],
    "no-floating-promises": true,
    "no-irregular-whitespace": true,
    "prefer-const": true,
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "trailing-comma": false
  },
  "rulesDirectory": []
}